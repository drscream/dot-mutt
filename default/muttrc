# view formats
  set alias_format = "%4n %t %-15a %r"
  set attach_format = " %u%D%t%2n %T%.40d%> [%.7m/%.10M, %.6e, %s]"
  set date_format = "!%a, %b %d, %Y at %I:%M:%S%p %Z"
  set folder_format = "%3C %12d %4N %-40f %> Z:%10sb"
  set forward_format = "[Fwd: %s]"
  set index_format = "%4C %Z %4N %[!%Y-%m-%d %H:%M] %-25.25F %s %> %?y?[%y]? A:%?X?%2X&  ? L:%5l Z:%5c"
  set pager_format = "-%Z- %C/%m: %-20.20n %s"
  set status_format = "-%r-Mutt: %f [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]---(%s/%S)-%>-(%P)---"

# content
auto_view text/x-diff text/x-vcard text/html application/msword image/* application/x-image application/x-perl text/calendar
alternative_order text/plain text/enriched text/calendar text/html

# headers in the pager
  ignore *
unignore from: date: subject: to: cc: message-id: in-reply-to: user-agent: resent- reply-to: mail-followup-to:
unignore newsgroups: references: posted-to: followup-to: nntp-posting-host:
unignore organization: organisation:
unignore lines:
unignore x-msg-ref: x-original-to: x-mailer:
# ignore x-status: x-uidl: x-attribution: x-authentication-warning: x-mime: x-msmail-priority: x-priority:
unhdr_order *
  hdr_order message-id: in-reply-to: references: path: received: date: expiry-date: nntp-posting-host: sender return-path from from: organization: organisation: resent- reply-to: mail-followup-to: mail-copies-to: errors-to: to: cc: delivered-to: mailing-list: list- newsgroups: followup-to: subject: importance: status: precedence: old- content- mime- x- user-agent: lines:

